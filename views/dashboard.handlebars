  <body>

<!-- Menu -->
<nav class="menu-bar">
  <ul>
    <li><a href="#"><span class="emoji">&#x1F60D;</span> Saved Recipes</a></li>
    <li><a href="#"><span class="emoji">&#x1F4DD;</span> Posted Recipes</a></li>
